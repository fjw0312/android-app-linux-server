<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
       	 	android:id="@+id/SHost"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="邮箱服务器地址：" />

   		<EditText
        	android:id="@+id/SHostEdit"
        	android:layout_width="match_parent"
       		android:layout_height="wrap_content"
        	android:singleLine="true" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
       	 	android:id="@+id/SPort"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="服务端口：" />

   		<EditText
        	android:id="@+id/SPortEdit"
        	android:layout_width="match_parent"
       		android:layout_height="wrap_content"
        	android:singleLine="true" />        
    </LinearLayout>
    
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
       	 	android:id="@+id/FAddr"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="发送邮箱：" />

   		<EditText
        	android:id="@+id/FAddrEdit"
        	android:layout_width="match_parent"
       		android:layout_height="wrap_content"
        	android:singleLine="true" />        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
       	 	android:id="@+id/PWord"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="邮箱密码：" />

   		<EditText
        	android:id="@+id/PWordEdit"
        	android:layout_width="match_parent"
       		android:layout_height="wrap_content"
        	android:singleLine="true" />        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
       	 	android:id="@+id/Name"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="邮箱名称：" />

   		<EditText
        	android:id="@+id/NameEdit"
        	android:layout_width="match_parent"
       		android:layout_height="wrap_content"
        	android:singleLine="true" />        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
       	 	android:id="@+id/Subject"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="邮件主题：" />

   		<EditText
        	android:id="@+id/SubjectEdit"
        	android:layout_width="match_parent"
       		android:layout_height="wrap_content"
        	android:singleLine="true" />        
    </LinearLayout>   

</LinearLayout>
